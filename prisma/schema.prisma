// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Gender {
  FEMALE
  MALE
  LGBTQ
  PREFERNOTTOSAY
}

model User {
  id              String    @id @default(uuid())
  username        String    @unique
  password        String
  firstname       String
  lastname        String
  profilePic      String?
  email           String    @unique
  googleaccount   String?
  facebookaccount String?
  gender          Gender

  course          Course[]
  comment         Comment[]
  enrollment      Enrollment[]
  registeredAt    DateTime  @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  comment   String
  photo     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rating    Int

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  courseId  Int @unique
  course  Course @relation(fields: [courseId], references: [id])
}

model Course {
  id          Int    @id @default(autoincrement())
  courseName  String @unique
  videoUrl    String  
  imageUrl    String?
  
  duration    String
  description String

  comment     Comment[]
  lesson      Lesson[]
  enrollment  Enrollment[]

  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])  
}

model Lesson {
  id          Int    @id @default(autoincrement())
  lessonName String
  videoUrl    String 
  duration    String

  courseId Int    @unique
  course   Course @relation(fields: [courseId], references: [id])
} 

model Enrollment {
  id          Int    @id @default(autoincrement())
  courseName  String

  courseId    Int    
  course      Course  @relation(fields: [courseId], references: [id])

  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id])

}
